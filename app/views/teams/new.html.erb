<h1>Create Your Team</h1>

<%= form_for @team do |f| %>
	
	<%= f.hidden_field :user_id, value: current_user.id %>

	<div class="field">
		<%= f.label :school_or_city %>
		<%= f.text_field :school %>
	</div>

	<div class="field">
		<%= f.label :nickname  %>
		<%= f.text_field :nickname  %>
	</div>
	
	<div class="field">
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div class="field">
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>

	<div class="field">
		<%= f.label :zip %>
		<%= f.text_field :zip %>
	</div>	

	<div class="field">
		<%= f.label :league %>
		<%= f.text_field :league %>
	</div>

	<div class="actions">
    	<%= f.submit %>
  	</div>
<% end %>